<div class="card m-4" style="width: 18rem;">
    <a href="/requests">
        <p>Create Maintenance Request</p>
    </a>
</div>

<div class="container d-flex justify-content-center">
    {{#each requests}}
    <div class="card d-flex m-2">
    <div class="card-body">
        <!-- these values need to correspond to the values in the model -->
        <h1 class="card-title"><b>{{property_id}}</b></h1>
        <p class="card-title"><b>Message:</b>{{request_message}}</p>
    </div>
                <div>
             <!--  Gonna wanna hook this button up to delete the request --> 
        <button type="submit" class="btn rounded">Mark As Complete</button>
    </div>
     </div> 
    {{/each}}
</div>


